doctype html
html(lang="en")
  head
    title="Jade User Template"
  body
  center
      h1 SER 421 User
      h2 Username: #{username}
  center
      h4 Name: #{name}
      h4 Quest: #{quest}
      h4 Color: #{color}
      h4 Capital: #{capital}
      
  center
      form(method="GET",action="/deleteEntry/:#{username}")
        p
          button(type="submit") Delete
      
  center
      form(method="GET",action="/logout")
        p
          button(type="submit") Logout